<%= form_for [:admin, @song] do |f| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>

  <div class="field">
    <%= f.label :rating %>
    <%= f.number_field :rating %>
  </div>

  <div class="field">
    <%= f.label :progress %>
    <%= f.text_field :progress %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
